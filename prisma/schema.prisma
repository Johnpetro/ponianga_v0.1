// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Admin User Model
model Admin {
  id        Int      @id @default(autoincrement())
  full_name String   @db.VarChar(100)
  email     String   @unique @db.VarChar(100)
  password  String   @db.VarChar(255)
  profile   String   @db.VarChar(500) @default("")
  bio       String   @db.Text @default("")
  phone     String   @db.VarChar(20) @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("admins")
  @@index([email])
}


// Job Model
model Job {
  id          Int      @id @default(autoincrement())
  jobTitle    String   @db.VarChar(255)
  employer    String   @db.VarChar(255)
  jobType     String   @db.VarChar(100)
  location    String   @db.VarChar(255)
  deadline    DateTime
  applicants  Int      @default(0)
  salary      String   @db.VarChar(100)
  skills      String   @db.Text
  description String   @db.Text
  image       String?  @db.VarChar(500)
  status      String   @default("Active") @db.VarChar(50)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relationship with Applications
  applications Application[]

  @@map("jobs")
}

// Scholarship Model
model Scholarship {
  id           Int      @id @default(autoincrement())
  vacancy      String   @db.VarChar(255)
  collegeName  String   @db.VarChar(255)
  programName  String   @db.VarChar(255)
  sponsorship  String   @db.VarChar(100)
  deadline     DateTime
  description  String   @db.Text
  requirements String   @db.Text
  image        String?  @db.VarChar(500)
  status       String   @default("Active") @db.VarChar(50)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relationship with Scholarship Applications
  applications ScholarshipApplication[]

  @@map("scholarships")
}

// Contact Model
model Contact {
  id            Int      @id @default(autoincrement())
  inquiry_type  String   @db.VarChar(100)
  full_name     String   @db.VarChar(255)
  email         String   @db.VarChar(255)
  phone         String   @db.VarChar(20)
  subject       String   @db.VarChar(255)
  message       String   @db.Text
  createdAt     DateTime @default(now())

  @@map("contacts")
}

// Team Member Model
model TeamMember {
  id        Int      @id @default(autoincrement())
  full_name String   @db.VarChar(255)
  bio       String   @db.Text
  position  String   @db.VarChar(255)
  profile   String   @db.VarChar(500)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("team_members")
}

// Job Application Model
model Application {
  id               Int      @id @default(autoincrement())
  jobId            Int
  firstName        String   @db.VarChar(100)
  lastName         String   @db.VarChar(100)
  email            String   @db.VarChar(255)
  phone            String   @db.VarChar(20)
  address          String   @db.VarChar(500)
  currentPosition  String   @db.VarChar(255)
  experience       String   @db.VarChar(50)
  expectedSalary   String   @db.VarChar(100)
  availableFrom    DateTime
  degree           String   @db.VarChar(255)
  university       String   @db.VarChar(255)
  graduationYear   String   @db.VarChar(4)
  gpa              String   @db.VarChar(10)
  skills           String   @db.Text
  coverLetter      String   @db.Text
  resume           String   @db.VarChar(500)
  portfolio        String   @db.VarChar(500)
  agreement        Boolean  @default(false)
  status           String   @default("Pending") @db.VarChar(50)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Foreign Key Relationship
  job Job @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@map("applications")
  @@index([jobId])
}

// Scholarship Application Model
model ScholarshipApplication {
  id              Int      @id @default(autoincrement())
  scholarshipId   Int
  firstName       String   @db.VarChar(100)
  lastName        String   @db.VarChar(100)
  email           String   @db.VarChar(255)
  phone           String   @db.VarChar(20)
  address         String   @db.VarChar(500)
  passport        String   @db.VarChar(500)
  status          String   @default("Pending") @db.VarChar(50)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Foreign Key Relationship
  scholarship Scholarship @relation(fields: [scholarshipId], references: [id], onDelete: Cascade)

  @@map("scholarship_applications")
  @@index([scholarshipId])
}

// Visitor Tracking Model
model Visitor {
  id          Int      @id @default(autoincrement())
  ipAddress   String   @db.VarChar(45) // IPv6 addresses can be up to 45 characters
  userAgent   String?  @db.VarChar(500)
  page        String   @db.VarChar(255)
  referrer    String?  @db.VarChar(500)
  createdAt   DateTime @default(now())

  @@map("visitors")
  @@index([ipAddress])
  @@index([createdAt])
}