# PostgreSQL Database Configuration
# Format: postgresql://[user]:[password]@[host]:[port]/[database]?schema=public

# Local PostgreSQL
# DATABASE_URL="postgresql://postgres:password@localhost:5432/job_app?schema=public"

# Production PostgreSQL (replace with your actual credentials)
DATABASE_URL="postgresql://username:password@host:5432/job_app?schema=public"

# Session Configuration
SESSION_SECRET=your_secure_session_secret_key_change_this

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_key_change_this

# Node Environment
NODE_ENV=development
