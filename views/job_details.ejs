                            </div>
                        </div>
                        
                        <!-- single-job-content -->
                        <div class="single-job-items mb-30">
                            <div class="job-items">
                                <div class="company-img">
                                    <a href="/job-details/3"><img src="assets/img/icon/job-list3.png" alt=""></a>
                                </div>
                                <div class="job-tittle">
                                    <a href="/job-details/3"><h4>UX/UI Designer</h4></a>
                                    <ul>
                                        <li>Design Studio</li>
