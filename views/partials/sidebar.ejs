<script>
  // Handle sidebar menu dropdown toggle with smooth transitions
  document.querySelectorAll('.toggle-menu').forEach(toggle => {
    toggle.addEventListener('click', function(e) {
      e.preventDefault();
      const submenu = this.nextElementSibling;
      const chevron = this.querySelector('.chevron-icon');
      
      if (submenu && submenu.classList.contains('pc-submenu')) {
        const isHidden = submenu.classList.contains('hidden');
        
        // Toggle visibility
        submenu.classList.toggle('hidden');
        
        // Set max-height for smooth animation
        if (!isHidden) {
          // Closing: shrink to 0
          submenu.style.maxHeight = '0px';
          submenu.style.opacity = '0';
        } else {
          // Opening: expand to content height
          submenu.style.maxHeight = submenu.scrollHeight + 'px';
          submenu.style.opacity = '1';
        }
        
        // Rotate chevron
        chevron.style.transform = isHidden ? 'rotate(90deg)' : 'rotate(0deg)';
      }
    });
  });
  
  // Set initial max-height for hidden submenus
  document.querySelectorAll('.pc-submenu').forEach(submenu => {
    if (submenu.classList.contains('hidden')) {
      submenu.style.maxHeight = '0px';
      submenu.style.opacity = '0';
    } else {
      submenu.style.maxHeight = submenu.scrollHeight + 'px';
      submenu.style.opacity = '1';
    }
  });
</script>