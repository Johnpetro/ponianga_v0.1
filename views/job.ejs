<main>

    <!-- Hero Area Start -->
    <div class="slider-area">
        <style>
            /* Page-scoped hero tweaks: shadowed image, left text and stunning entrance animations */
            .single-slider.hero-shadow { position: relative; overflow: hidden; }
            .single-slider.hero-shadow .hero-image{
                position: absolute;
                inset: 0;
                background-size: cover;
                background-position: center center;
                z-index: 0;
                filter: brightness(0.55);
                box-shadow: 0 30px 80px rgba(0,0,0,0.55);
                transform-origin: center;
                animation: heroZoom 1.5s ease-out both;
            }
            .single-slider.hero-shadow .hero-cap{ 
                position: relative; 
                z-index: 2; 
                padding: 80px 0; 
            }
            .hero-cap.left-align{ text-align: left; }

            /* Enhanced CSS keyframe animations */
            @keyframes heroZoom { 
                from{ transform: scale(1.1); opacity: 0; } 
                to{ transform: scale(1); opacity: 1; } 
            }
            @keyframes fadeInLeft { 
                from{ opacity: 0; transform: translateX(-50px) scale(0.95); } 
                to{ opacity:1; transform: translateX(0) scale(1); } 
            }
            @keyframes fadeInUp { 
                from{ opacity: 0; transform: translateY(30px) scale(0.98); } 
                to{ opacity:1; transform: translateY(0) scale(1); } 
            }
            
            .anim-left { 
                animation: fadeInLeft 1.0s cubic-bezier(0.25, 0.46, 0.45, 0.94) both; 
                animation-delay: 0.3s;
            }
            .anim-up { 
                animation: fadeInUp 1.0s cubic-bezier(0.25, 0.46, 0.45, 0.94) both; 
                animation-delay: 0.5s;
            }
            
            /* Hero button animations */
         
            .hero-btn:active {
                transform: translateY(0);
            }
            
            /* Smooth scroll behavior */
            html { scroll-behavior: smooth; }

            /* Responsive adjustments */
            @media (max-width: 768px){
                .single-slider.hero-shadow .hero-cap{ padding: 40px 0; }
                .single-slider.hero-shadow .hero-image{ box-shadow: 0 18px 48px rgba(0,0,0,0.5); }
                .anim-left, .anim-up { 
                    animation-duration: 0.8s; 
                }
            }

            /* Shared button styles for job cards */
            .job-card-submit {
                background: none;
                border: none;
                padding: 0;
                cursor: pointer;
            }
            .job-card-submit:focus {
                outline: 2px solid #1F6FC0;
                outline-offset: 2px;
                border-radius: 4px;
            }
            .job-card-submit.title-btn {
                text-align: left;
                width: 100%;
            }
            .job-card-submit.type-btn {
                color: #0F3460;
                text-decoration: none;
            }

            .badge-open {
                display: inline-block;
                padding: 5px 12px;
                border-radius: 4px;
                font-size: 11px;
                font-weight: 600;
                background-color: #d1fae5;
                color: #047857;
            }
            .badge-open i {
                font-size: 7px;
                margin-right: 5px;
            }
            .badge-closed {
                display: inline-block;
                padding: 5px 12px;
                border-radius: 4px;
                font-size: 11px;
                font-weight: 600;
                background-color: #fee2e2;
                color: #991b1b;
            }
            .badge-closed i {
                font-size: 7px;
                margin-right: 5px;
            }
        </style>

        <div class="single-slider hero-shadow slider-height2 d-flex align-items-center">
            <div class="hero-image" style="background-image: url('/assets/img/hero/dg.png');"></div>
            <div class="container">
                <div class="row">
                    <div class="col-xl-7 col-lg-8">
                        <div class="hero-cap left-align text-white">
                            <h1 class="anim-left text-white">Get your job</h1>
                            <p class="anim-up text-white text-lg" style="margin-top:12px; opacity:.92; font-size: 23px;">Browse current openings and apply to kickstart your career.</p>
                            <div class="hero-btn anim-up" style="margin-top: 25px; animation-delay: 0.7s;">
                                <a href="#job-listings" class=" hero-btn" style="background: var(--primary, #1F6FC0); color: white; padding: 12px 30px; border-radius: 25px; text-decoration: none; display: inline-block; transition: all 0.3s ease; box-shadow: 0 5px 15px rgba(31, 111, 192, 0.3);">
                                    <i class="fas fa-briefcase" style="margin-right: 8px;"></i>Browse Jobs
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero Area End -->
    <!-- Job List Area Start -->
    <div id="job-listings" class="job-listing-area pt-120 pb-120">
        <div class="container">
            <div class="row">
                <!-- Left content -->
                <div class="col-xl-3 col-lg-3 col-md-4">
                    <div class="row">

                    </div>
                    <!-- Job Category Listing start -->
                    <div class="job-category-listing mb-50">
                        <!-- single one -->
                        <div class="single-listing">
                            <div class="small-section-tittle2">
                                <h4>Job Category</h4>
                            </div>
                            <!-- Select job items start -->
                            <div class="select-job-items2">
                                <select name="select">
                                    <option value="">All Category</option>
                                    <option value="">Category 1</option>
                                    <option value="">Category 2</option>
                                    <option value="">Category 3</option>
                                    <option value="">Category 4</option>
                                </select>
                            </div>
                            <!--  Select job items End-->
                            <!-- select-Categories start -->

                            <!-- select-Categories End -->
                        </div>


                       
                        <div class="single-listing">
                            <!-- Range Slider Start -->
                            <aside class="left_widgets p_filter_widgets price_rangs_aside sidebar_box_shadow">
                                <div class="small-section-tittle2">
                                    <h4>Filter Jobs</h4>
                                </div>
                                <div class="widgets_inner">
                                    <div class="range_item">
                                        <!-- <div id="slider-range"></div> -->
                                        <input type="text" class="js-range-slider" value="" />
                                        <div class="d-flex align-items-center">
                                            <div class="price_text">
                                                <p>Price :</p>
                                            </div>
                                            <div class="price_value d-flex justify-content-center">
                                                <input type="text" class="js-input-from" id="amount" readonly />
                                                <span>to</span>
                                                <input type="text" class="js-input-to" id="amount" readonly />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </aside>
                            <!-- Range Slider End -->
                        </div>
                    </div>
                    <!-- Job Category Listing End -->
                </div>
                <!-- Right content -->
                <div class="col-xl-9 col-lg-9 col-md-8">
                    <!-- Featured_job_start -->
                    <section class="featured-job-area">
                        <div class="container">
                            <!-- Count of Job list Start -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="count-job mb-35">
                                        <span>
                                            <%= jobs && jobs.length> 0 ? jobs.length : 0 %> Jobs found
                                        </span>
                                        <!-- Select job items start -->
                                        <div class="select-job-items">
                                            <span>Sort by</span>
                                            <select name="sortBy" id="sortBySelect" onchange="handleSort(this.value)">
                                                <option value="">None</option>
                                                <option value="open">Open Jobs</option>
                                                <option value="closed">Closed Jobs</option>
                                                <option value="newest">Newest First</option>
                                            </select>
                                        </div>
                                        <!--  Select job items End-->
                                    </div>
                                </div>
                            </div>
                            <!-- Count of Job list End -->
                            <!-- Loop through jobs -->
                            <% if (jobs && jobs.length> 0) { %>
                                <% jobs.forEach((job)=> { %>
                                    <!-- single-job-content -->
                                    <div class="single-job-items mb-30">
                                        <form method="POST" action="/job-details" style="display: contents;">
                                            <input type="hidden" name="jobId" value="<%= job.id %>">
                                            <div class="job-items"
                                                style="display: flex; align-items: center; gap: 20px; flex: 1;">
                                                <div class="company-img" style="flex-shrink: 0;">
                                                    <button type="submit" class="job-card-submit" aria-label="View <%= job.jobTitle %> details">
                                                        <% if (job.image && job.image.trim() !== '') { %>
                                                            <img src="<%= job.image %>" alt="<%= job.jobTitle %>" style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px;">
                                                        <% } else { %>
                                                            <img src="assets/img/icon/job-list1.png" alt="Default job icon" style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px;">
                                                        <% } %>
                                                    </button>
                                                </div>
                                                <div class="job-tittle job-tittle2" style="flex: 1; min-width: 0;">
                                                    <button type="submit" class="job-card-submit title-btn" aria-label="Open <%= job.jobTitle %>">
                                                        <h4
                                                            style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; margin: 0; color: #0F3460;">
                                                            <%= job.jobTitle %>
                                                        </h4>
                                                    </button>
                                                    <ul style="margin: 5px 0 0 0; padding: 0;">
                                                        <li>
                                                            <%= job.employer %>
                                                        </li>
                                                        <li><i class="fas fa-map-marker-alt"></i>
                                                            <%= job.location %>
                                                        </li>
                                                        <li>
                                                            <%= job.salary %>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="items-link items-link2 f-right"
                                                style="flex-shrink: 0; margin-left: auto; text-align: right;">
                                                <button type="submit" class="job-card-submit type-btn" aria-label="View <%= job.jobType %> job details">
                                                    <%= job.jobType %>
                                                </button>
                                            <div style="margin-top: 8px;">
                                                <% 
                                                  let badgeClass = 'badge-open';
                                                  let statusText = 'Open';
                                                  if (job.status === 'Closed') {
                                                    badgeClass = 'badge-closed';
                                                    statusText = 'Closed';
                                                  }
                                                %>
                                                <span class="<%= badgeClass %>">
                                                  <i class="fas fa-circle"></i>
                                                  <%= statusText %>
                                                </span>
                                            </div>
                                            <span style="display: block; margin-top: 8px; font-size: 13px;">Deadline: <%= new Date(job.deadline).toLocaleDateString('en-US', {
                                                    month: 'short' , day: 'numeric' }) %></span>
                                        </div>
                                        </form>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <div class="single-job-items mb-30">
                                                <p class="text-center">No jobs available at the moment.</p>
                                            </div>
                                            <% } %>
                        </div>
                    </section>
                    <!-- Featured_job_end -->
                </div>
            </div>
        </div>
    </div>
    <!-- Job List Area End -->
    <!--Pagination Start  -->
    <div class="pagination-area pb-115 text-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="single-wrap d-flex justify-content-center">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-start">
                                <!-- Previous Button -->
                                <% if (currentPage> 1) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/job-listing?page=<%= currentPage - 1 %>">
                                            <span class="ti-angle-left"></span>
                                        </a>
                                    </li>
                                    <% } %>

                                        <!-- Page Numbers -->
                                        <% for (let i=1; i <=totalPages; i++) { %>
                                            <% if (i===currentPage) { %>
                                                <li class="page-item active">
                                                    <a class="page-link" href="#">
                                                        <%= String(i).padStart(2, '0' ) %>
                                                    </a>
                                                </li>
                                                <% } else { %>
                                                    <li class="page-item">
                                                        <a class="page-link" href="/job-listing?page=<%= i %>">
                                                            <%= String(i).padStart(2, '0' ) %>
                                                        </a>
                                                    </li>
                                                    <% } %>
                                                        <% } %>

                                                            <!-- Next Button -->
                                                            <% if (currentPage < totalPages) { %>
                                                                <li class="page-item">
                                                                    <a class="page-link"
                                                                        href="/job-listing?page=<%= currentPage + 1 %>">
                                                                        <span class="ti-angle-right"></span>
                                                                    </a>
                                                                </li>
                                                                <% } %>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Pagination End  -->

    <script>
        function handleSort(sortType) {
            const jobs = document.querySelectorAll('.single-job-items');
            
            if (sortType === '') {
                // Show all jobs
                jobs.forEach(job => {
                    job.style.display = 'block';
                });
            } else if (sortType === 'open') {
                // Show only open jobs
                jobs.forEach(job => {
                    const badge = job.querySelector('.badge-open');
                    job.style.display = badge ? 'block' : 'none';
                });
            } else if (sortType === 'closed') {
                // Show only closed jobs
                jobs.forEach(job => {
                    const badge = job.querySelector('.badge-closed');
                    job.style.display = badge ? 'block' : 'none';
                });
            } else if (sortType === 'newest') {
                // Show all (newest is default order from backend)
                jobs.forEach(job => {
                    job.style.display = 'block';
                });
            }
        }
    </script>

</main>
