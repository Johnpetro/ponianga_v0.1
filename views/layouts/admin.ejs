<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= locals.title %></title>
  <meta name="description" content="<%= locals.description %>">
  
  <!-- Favicon -->
  <link rel="icon" href="/images/favicon.svg" type="image/x-icon" />
  
  
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600&display=swap" rel="stylesheet" />
  
  <!-- Font & Icon Libraries -->
  <link rel="stylesheet" href="/fonts/phosphor/duotone/style.css" />
  <link rel="stylesheet" href="/fonts/tabler-icons.min.css" />
  <link rel="stylesheet" href="/fonts/feather.css" />
  <link rel="stylesheet" href="/fonts/fontawesome.css" />
  <link rel="stylesheet" href="/fonts/material.css" />
  <link rel="stylesheet" href="/fonts/inter/inter.css" />
  
  <!-- Bootstrap (if needed for admin components) -->
  <link rel="stylesheet" href="/css/bootstrap.min.css" />
  
  <!-- Template CSS (shadows, components, spacing) -->
  <link rel="stylesheet" href="/css/style.css" />
  
  <!-- Tailwind CSS utilities -->
  <link rel="stylesheet" href="/css/tailwind.build.css" />
  <style>
    :root {
      --admin-primary: #2563eb;
      --admin-primary-dark: #1d4ed8;
      --admin-surface: #ffffff;
      --admin-border: #e2e8f0;
    }

    body {
      color: #0f172a;
    }

    .admin-page {
      min-height: 100%;
      padding: 1.25rem;
    }

    .admin-page-inner {
      width: 100%;
      max-width: 100%;
    }

    .admin-card {
      background: var(--admin-surface);
      border: 1px solid var(--admin-border);
      border-radius: 14px;
      box-shadow: 0 8px 24px rgba(15, 23, 42, 0.06);
      overflow: hidden;
    }

    .admin-toolbar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 0.75rem;
      flex-wrap: wrap;
    }

    .admin-toolbar-actions {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .admin-table-wrap {
      width: 100%;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .admin-table {
      width: 100%;
      min-width: 760px;
    }

    .admin-pagination {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 0.75rem;
      flex-wrap: wrap;
    }

    .admin-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 0.55rem 0.9rem;
      border-radius: 8px;
      font-weight: 600;
      transition: background-color 0.2s ease, color 0.2s ease;
    }

    .admin-btn-primary {
      color: #fff;
      background: var(--admin-primary);
    }

    .admin-btn-primary:hover {
      background: var(--admin-primary-dark);
      color: #fff;
    }

    .admin-section-head {
      margin-bottom: 1rem;
    }

    .admin-section-head h2 {
      font-size: 1.25rem;
      font-weight: 700;
      color: #0f172a;
      margin: 0;
    }

    .admin-section-head p {
      margin: 0.3rem 0 0;
      color: #64748b;
      font-size: 0.92rem;
    }

    .admin-action-btn {
      width: 32px;
      height: 32px;
      border-radius: 8px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: #f1f5f9;
      border: 1px solid #e2e8f0;
      transition: background-color 0.2s ease, transform 0.2s ease;
    }

    .admin-action-btn:hover {
      background: #e2e8f0;
      transform: translateY(-1px);
    }

    @media (max-width: 768px) {
      .admin-page {
        padding: 0.75rem;
      }

      .admin-toolbar,
      .admin-toolbar-actions,
      .admin-pagination {
        flex-direction: column;
        align-items: stretch;
      }

      .admin-btn {
        width: 100%;
      }
    }
  </style>

</head>
<body class="min-h-screen bg-slate-50 dark:bg-gray-900">
  
  <!-- Loader -->
  <div class="loader-bg fixed inset-0 bg-white dark:bg-gray-900 z-[1034]">
    <div class="loader-track h-[5px] w-full absolute overflow-hidden top-0">
      <div class="loader-fill w-[300px] h-[5px] bg-blue-500 absolute top-0 left-0 animate-[hitZak_0.6s_ease-in-out_infinite_alternate]"></div>
    </div>
  </div>

  <!-- Main wrapper with sidebar + content -->
  <div class="flex min-h-screen">
    
    <!-- Sidebar -->
    <% if (locals.title !== 'Login') { %>
      <%- include('../partials/sidebar.ejs') %>

        
    <% } %>

    <!-- Main content area with header -->
    <div class="flex-1 flex flex-col">
          <% if (locals.title !== 'Login') { %>
    
      <%- include('../partials/header_admin.ejs')   %>
    
        
    <% } %>
      <!-- Fixed Header (only above main content, not sidebar) -->
    
    
      <!-- Main content -->
      <main class="flex-1 overflow-y-auto">
        <%- body %>
      </main>

    </div>

  </div>

  <!-- Scripts -->
  <script src="/js/vendor/jquery-1.12.4.min.js"></script>
  <script src="/js/vendor/modernizr-3.5.0.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/popper.min.js"></script>
  
  <!-- Plugin JS -->
  <script src="/js/plugins/simplebar.min.js"></script>
  <script src="/js/plugins/popper.min.js"></script>
  <script src="/js/icon/custom-icon.js"></script>
  <script src="/js/plugins/feather.min.js"></script>
  <script src="/js/component.js"></script>
  <script src="/js/theme.js"></script>
  <script src="/js/script.js"></script>
  
  <!-- Main JS -->
  <script src="/js/main.js"></script>
  <script src="/js/plugins.js"></script>

  <!-- Loader & Animations -->
  <script>
    // Define all keyframes
    if (!document.querySelector('style[data-animations]')) {
      const style = document.createElement('style');
      style.setAttribute('data-animations', 'true');
      style.innerHTML = `
        @keyframes floating {
          0%, 100% {
            transform: translateY(0px);
          }
          50% {
            transform: translateY(-20px);
          }
        }

        @keyframes floating-alt {
          0%, 100% {
            transform: translateX(0px) translateY(0px);
          }
          50% {
            transform: translateX(10px) translateY(-15px);
          }
        }

        @keyframes hitZak {
          0% {
            left: 0;
            width: 0;
          }
          50% {
            width: 80%;
          }
          100% {
            width: 100%;
            left: 0;
          }
        }

        @keyframes fadeOutLoader {
          0% {
            opacity: 1;
            visibility: visible;
          }
          100% {
            opacity: 0;
            visibility: hidden;
          }
        }

        .animate-floating {
          animation: floating 7s infinite ease-in-out;
        }

        .animate-floating-alt {
          animation: floating-alt 9s infinite ease-in-out;
        }

        .animate-\\[hitZak_0\\.6s_ease-in-out_infinite_alternate\\] {
          animation: hitZak 0.6s ease-in-out infinite alternate;
        }

        .loader-fade-out {
          animation: fadeOutLoader 0.8s ease-in-out forwards;
        }
      `;
      document.head.appendChild(style);
    }

    // Hide loader when page is fully loaded
    function hideLoader() {
      const loaderBg = document.querySelector('.loader-bg');
      if (loaderBg) {
        loaderBg.classList.add('loader-fade-out');
        setTimeout(() => {
          loaderBg.style.display = 'none';
        }, 800);
      }
    }

    // Animate floating bubbles
    function initBubbleAnimation() {
      const bubbles = document.querySelectorAll('[class*="animate-floating"], [class*="bg-theme"], span[class*="rounded-full"]');
      
      bubbles.forEach((bubble) => {
        if (bubble.classList.contains('animate-[floating_7s_infinite]') || 
            bubble.classList.contains('animate-[floating_9s_infinite]')) {
          return;
        }
        
        if (bubble.classList.contains('rounded-full')) {
          const duration = (7 + Math.random() * 2) + 's';
          const delay = (Math.random() * 2) + 's';
          
          bubble.style.animation = `floating ${duration} infinite`;
          bubble.style.animationDelay = delay;
        }
      });
    }

    // Initialize on page load
    window.addEventListener('load', function() {
      hideLoader();
      initBubbleAnimation();
    });

    // Fallback: hide loader after 3 seconds
    setTimeout(hideLoader, 3000);
  </script>

</body>
</html>
