<style>
  /* Custom modal width styles */
  .modal-narrow {
    width: 1000px;
  }
  @media (max-width: 640px) {
    .modal-narrow {
      max-width: 100%;
      max-width: calc(100% - 1rem);
    }
  }
</style>



<div class="overflow-y-auto h-[calc(100vh-64px)]">
  <div class="p-6">
    <div class="card table-card gap-y-6">
      <div class="card-header flex items-center justify-between">
        <h5>Team Members</h5>
        <button id="addTeamMemberBtn" class="btn btn-primary flex items-center gap-2">
          <i class="fas fa-plus"></i>
          Add Team Member
        </button>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="w-full text-sm">
            <thead>
              <tr class="border-b border-slate-200 dark:border-slate-600">
                <th class="text-left px-4 py-3 font-semibold text-slate-900 dark:text-white">No</th>
                <th class="text-left px-4 py-3 font-semibold text-slate-900 dark:text-white">Full Name</th>
                <th class="text-left px-4 py-3 font-semibold text-slate-900 dark:text-white">Position</th>
                <th class="text-left px-4 py-3 font-semibold text-slate-900 dark:text-white">Bio</th>
                <th class="text-left px-4 py-3 font-semibold text-slate-900 dark:text-white">Profile</th>
                <th class="text-center px-4 py-3 font-semibold text-slate-900 dark:text-white">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (teamMembers && teamMembers.length > 0) { %>
                <% teamMembers.forEach((member, index) => { %>
                  <tr class="border-b border-slate-200 dark:border-slate-600 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                    <td class="px-4 py-3 text-slate-700 dark:text-slate-300">
                      <span class="font-semibold"><%= (currentPage - 1) * membersPerPage + index + 1 %></span>
                    </td>
                    <td class="px-4 py-3 text-slate-700 dark:text-slate-300">
                      <h6 class="font-semibold"><%= member.full_name %></h6>
                    </td>
                    <td class="px-4 py-3 text-slate-700 dark:text-slate-300">
                      <span><%= member.position %></span>
                    </td>
                    <td class="px-4 py-3 text-slate-700 dark:text-slate-300">
                      <span class="truncate max-w-xs block"><%= member.bio.substring(0, 50) %>...</span>
                    </td>
                    <td class="px-4 py-3">
                      <% if (member.profile) { %>
                        <img src="<%= member.profile %>" alt="<%= member.full_name %>" class="w-10 h-10 rounded-full object-cover border border-slate-200" />
                      <% } else { %>
                        <img src="https://ui-avatars.com/api/?name=<%= member.full_name %>&background=0D8ABC&color=fff&rounded=true" alt="<%= member.full_name %>" class="w-8 h-8 rounded-full" />
                      <% } %>
                    </td>
                    <td class="px-4 py-3 text-center">
                      <div class="flex items-center justify-center gap-2">
                        <button class="view-team-member-btn text-green-500 hover:text-green-700 dark:hover:text-green-400 transition"
                          data-member-id="<%= member.id %>"
                          data-full-name="<%= member.full_name %>"
                          data-position="<%= member.position %>"
                          data-bio="<%= member.bio %>"
                          data-profile="<%= member.profile || '' %>">
                          <i class="fas fa-eye text-sm"></i>
                        </button>
                        <button class="edit-team-member-btn text-blue-500 hover:text-blue-700 dark:hover:text-blue-400 transition"
                          data-member-id="<%= member.id %>"
                          data-full-name="<%= member.full_name %>"
                          data-position="<%= member.position %>"
                          data-bio="<%= member.bio %>"
                          data-profile="<%= member.profile || '' %>">
                          <i class="fas fa-edit text-sm"></i>
                        </button>
                        <button class="delete-team-member-btn text-red-500 hover:text-red-700 dark:hover:text-red-400 transition"
                          data-member-id="<%= member.id %>"
                          data-full-name="<%= member.full_name %>">
                          <i class="fas fa-trash text-sm"></i>
                        </button>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="px-4 py-8 text-center text-slate-500 dark:text-slate-400">
                    No team members found. Add one to get started!
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Pagination Controls -->
        <div class="flex items-center justify-between mt-6 px-4 py-4 border-t border-slate-200 dark:border-slate-600">
          <div class="text-sm text-slate-600 dark:text-slate-400">
            Showing <span class="font-semibold"><%= teamMembers && teamMembers.length > 0 ? (currentPage - 1) * membersPerPage + 1 : 0 %></span> 
            to <span class="font-semibold"><%= Math.min(currentPage * membersPerPage, totalMembers) %></span> 
            of <span class="font-semibold"><%= totalMembers %></span> team members
          </div>

          <div class="flex items-center gap-2">
            <% if (currentPage > 1) { %>
              <a href="?page=<%= currentPage - 1 %>" class="px-3 py-2 text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 rounded transition">
                Previous
              </a>
            <% } else { %>
              <button disabled class="px-3 py-2 text-slate-400 bg-slate-100 dark:bg-slate-700 rounded cursor-not-allowed opacity-50">
                Previous
              </button>
            <% } %>

            <div class="flex items-center gap-1">
              <% for (let i = 1; i <= totalPages; i++) { %>
                <% if (i === currentPage) { %>
                  <button disabled class="px-3 py-2 text-white bg-blue-500 rounded font-semibold"><%= i %></button>
                <% } else { %>
                  <a href="?page=<%= i %>" class="px-3 py-2 text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 rounded transition"><%= i %></a>
                <% } %>
              <% } %>
            </div>

            <% if (currentPage < totalPages) { %>
              <a href="?page=<%= currentPage + 1 %>" class="px-3 py-2 text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 rounded transition">
                Next
              </a>
            <% } else { %>
              <button disabled class="px-3 py-2 text-slate-400 bg-slate-100 dark:bg-slate-700 rounded cursor-not-allowed opacity-50">
                Next
              </button>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Sidebar Toggle Script -->
<script src="/js/sidebar-toggle.js"></script>

<!-- Team Member Modals and Scripts -->
<script>
  // View Team Member Modal
  const viewModal = document.createElement('div');
  viewModal.id = 'viewTeamMemberModal';
  viewModal.className = 'fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4 hidden';
  viewModal.innerHTML = `
    <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg modal-narrow   flex flex-col">
      <div class="flex items-center justify-between p-6 border-b border-slate-200 dark:border-slate-700">
        <h3 class="text-xl font-semibold text-slate-900 dark:text-white">Team Member Details</h3>
        <button class="close-modal text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-300">
          <i class="fas fa-times text-xl"></i>
        </button>
      </div>
      <div class="flex-1 overflow-y-auto p-6 space-y-4">
        <div class="text-center mb-4">
          <img id="viewProfileImg" src="" alt="" class="w-16 h-16 rounded mx-auto mb-4 object-cover border-4 border-blue-500" />
        </div>
        <div>
          <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Full Name</label>
          <p id="viewFullName" class="text-slate-900 dark:text-white font-medium"></p>
        </div>
        <div>
          <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Position</label>
          <p id="viewPosition" class="text-slate-900 dark:text-white font-medium"></p>
        </div>
        <div>
          <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Bio</label>
          <p id="viewBio" class="text-slate-700 dark:text-slate-300 leading-relaxed whitespace-pre-wrap"></p>
        </div>
      </div>
      <div class="flex items-center justify-end gap-3 p-6 border-t border-slate-200 dark:border-slate-700">
        <button class="close-modal px-4 py-2 text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 rounded transition">
          Close
        </button>
      </div>
    </div>
  `;
  document.body.appendChild(viewModal);

  // Add Team Member Modal
  const addModal = document.createElement('div');
  addModal.id = 'addTeamMemberModal';
  addModal.className = 'fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4 hidden';
  addModal.innerHTML = `
    <div class="bg-white dark:bg-slate-800 rounded-lg shadow-2xl w-full modal-narrow max-h-[90vh] flex flex-col">
      <div class="flex items-center justify-between p-6 border-b border-slate-200 dark:border-slate-700">
        <h2 class="text-xl font-bold text-slate-900 dark:text-white">Add New Team Member</h2>
        <button class="close-modal text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-300">
          <i class="fas fa-times text-xl"></i>
        </button>
      </div>
      <form id="addTeamMemberForm" class="flex-1 overflow-y-auto p-6 space-y-3">
        <div>
          <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Full Name</label>
          <input type="text" name="full_name" placeholder="e.g., John Doe" required class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>
        <div>
          <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Position</label>
          <input type="text" name="position" placeholder="e.g., Lead Developer" required class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>
        <div>
          <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Bio</label>
          <textarea name="bio" rows="4" placeholder="Enter team member bio..." required class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
        </div>
        <div>
          <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Profile Image</label>
          <input type="file" name="profile" accept="image/*" class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500" />
          <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">Supported formats: JPG, PNG, GIF (Max 5MB)</p>
        </div>
      </form>
      <div class="flex items-center justify-end gap-3 p-6 border-t border-slate-200 dark:border-slate-700">
        <button type="button" class="close-modal px-4 py-2 text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 rounded transition">
          Cancel
        </button>
        <button type="submit" form="addTeamMemberForm" class="px-4 py-2 text-white bg-blue-500 hover:bg-blue-600 rounded transition flex items-center gap-2">
          <i class="fas fa-plus"></i>
          Add Member
        </button>
      </div>
    </div>
  `;
  document.body.appendChild(addModal);

  // Edit Team Member Modal
  const editModal = document.createElement('div');
  editModal.id = 'editTeamMemberModal';
  editModal.className = 'fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4 hidden';
  editModal.innerHTML = `
    <div class="bg-white dark:bg-slate-800 rounded-lg shadow-2xl w-full modal-narrow max-h-[90vh] flex flex-col">
      <div class="flex items-center justify-between p-6 border-b border-slate-200 dark:border-slate-700">
        <h2 class="text-xl font-bold text-slate-900 dark:text-white">Edit Team Member</h2>
        <button class="close-modal text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-300">
          <i class="fas fa-times text-xl"></i>
        </button>
      </div>
      <form id="editTeamMemberForm" class="flex-1 overflow-y-auto p-6 space-y-3">
        <input type="hidden" id="editMemberId" name="memberId" />
        <div>
          <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Full Name</label>
          <input type="text" id="editFullName" name="full_name" placeholder="e.g., John Doe" required class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>
        <div>
          <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Position</label>
          <input type="text" id="editPosition" name="position" placeholder="e.g., Lead Developer" required class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>
        <div>
          <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Bio</label>
          <textarea id="editBio" name="bio" rows="4" placeholder="Enter team member bio..." required class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
        </div>
        <div>
          <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Profile Image</label>
          <input type="file" id="editProfile" name="profile" accept="image/*" class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500" />
          <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">Supported formats: JPG, PNG, GIF (Max 5MB)</p>
        </div>
      </form>
      <div class="flex items-center justify-end gap-3 p-6 border-t border-slate-200 dark:border-slate-700">
        <button type="button" class="close-modal px-4 py-2 text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 rounded transition">
          Cancel
        </button>
        <button type="submit" form="editTeamMemberForm" class="px-4 py-2 text-white bg-green-500 hover:bg-green-600 rounded transition flex items-center gap-2">
          <i class="fas fa-save"></i>
          Save Changes
        </button>
      </div>
    </div>
  `;
  document.body.appendChild(editModal);

  // Delete Confirmation Modal
  const deleteModal = document.createElement('div');
  deleteModal.id = 'deleteTeamMemberModal';
  deleteModal.className = 'fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4 hidden';
  deleteModal.innerHTML = `
    <div class="bg-white dark:bg-slate-800 rounded-lg shadow-2xl w-full modal-narrow">
      <div class="flex items-center justify-between p-6 border-b border-slate-200 dark:border-slate-700">
        <h2 class="text-xl font-bold text-slate-900 dark:text-white flex items-center gap-2">
          <i class="fas fa-exclamation-triangle text-red-500"></i>
          Delete Member
        </h2>
      </div>
      <div class="p-6">
        <p class="text-slate-700 dark:text-slate-300 mb-2">Are you sure you want to delete this team member?</p>
        <p id="deleteMemberName" class="text-sm font-semibold text-slate-600 dark:text-slate-400 bg-slate-100 dark:bg-slate-700 p-3 rounded"></p>
        <p class="text-xs text-slate-500 dark:text-slate-400 mt-3">
          <i class="fas fa-info-circle mr-1"></i>
          This action cannot be undone.
        </p>
      </div>
      <div class="flex items-center justify-end gap-3 p-6 border-t border-slate-200 dark:border-slate-700">
        <button class="close-modal px-4 py-2 text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 rounded transition">
          Cancel
        </button>
        <button id="confirmDeleteBtn" class="px-4 py-2 text-white bg-red-500 hover:bg-red-600 rounded transition flex items-center gap-2">
          <i class="fas fa-trash"></i>
          Delete Member
        </button>
      </div>
    </div>
  `;
  document.body.appendChild(deleteModal);

  // Modal Management
  function setupModalListeners(modal) {
    const closeButtons = modal.querySelectorAll('.close-modal');
    closeButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        modal.classList.add('hidden');
      });
    });
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.classList.add('hidden');
      }
    });
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
        modal.classList.add('hidden');
      }
    });
  }

  setupModalListeners(viewModal);
  setupModalListeners(addModal);
  setupModalListeners(editModal);
  setupModalListeners(deleteModal);

  // View Team Member
  document.querySelectorAll('.view-team-member-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      const fullName = btn.dataset.fullName;
      const position = btn.dataset.position;
      const bio = btn.dataset.bio;
      const profile = btn.dataset.profile;

      document.getElementById('viewFullName').textContent = fullName;
      document.getElementById('viewPosition').textContent = position;
      document.getElementById('viewBio').textContent = bio;
      document.getElementById('viewProfileImg').src = profile || `https://ui-avatars.com/api/?name=${fullName}&background=0D8ABC&color=fff&rounded=true`;
      
      viewModal.classList.remove('hidden');
    });
  });

  // Add Team Member
  document.getElementById('addTeamMemberBtn').addEventListener('click', () => {
    addModal.classList.remove('hidden');
  });

  document.getElementById('addTeamMemberForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target);

    try {
      const response = await fetch('/team-members', {
        method: 'POST',
        body: formData
      });
      const result = await response.json();
      if (result.success) {
        alert('Team member added successfully!');
        addModal.classList.add('hidden');
        document.getElementById('addTeamMemberForm').reset();
        setTimeout(() => location.reload(), 500);
      } else {
        alert('Error: ' + result.message);
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error adding team member');
    }
  });

  // Edit Team Member
  document.querySelectorAll('.edit-team-member-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      const memberId = btn.dataset.memberId;
      const fullName = btn.dataset.fullName;
      const position = btn.dataset.position;
      const bio = btn.dataset.bio;

      document.getElementById('editMemberId').value = memberId;
      document.getElementById('editFullName').value = fullName;
      document.getElementById('editPosition').value = position;
      document.getElementById('editBio').value = bio;
      // Don't set file input value - user must select new file
      document.getElementById('editProfile').value = '';
      
      editModal.classList.remove('hidden');
    });
  });

  document.getElementById('editTeamMemberForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const memberId = document.getElementById('editMemberId').value;
    const formData = new FormData(e.target);
    formData.delete('memberId');

    try {
      const response = await fetch(`/team-members/${memberId}`, {
        method: 'PATCH',
        body: formData
      });
      const result = await response.json();
      if (result.success) {
        alert('Team member updated successfully!');
        editModal.classList.add('hidden');
        setTimeout(() => location.reload(), 500);
      } else {
        alert('Error: ' + result.message);
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error updating team member');
    }
  });

  // Delete Team Member
  let memberToDeleteId = null;
  document.querySelectorAll('.delete-team-member-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      memberToDeleteId = btn.dataset.memberId;
      document.getElementById('deleteMemberName').textContent = btn.dataset.fullName;
      deleteModal.classList.remove('hidden');
    });
  });

  document.getElementById('confirmDeleteBtn').addEventListener('click', async () => {
    if (!memberToDeleteId) return;
    try {
      const response = await fetch(`/team-members/${memberToDeleteId}`, {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' }
      });
      const result = await response.json();
      if (result.success) {
        alert('Team member deleted successfully!');
        deleteModal.classList.add('hidden');
        setTimeout(() => location.reload(), 500);
      } else {
        alert('Error: ' + result.message);
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error deleting team member');
    }
  });
</script>
