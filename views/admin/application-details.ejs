<div class="admin-page">
  <div class="admin-page-inner">
    <% if (application) { %>
      <div class="admin-section-head">
        <h2>Application Details</h2>
        <p>
          Reviewing <strong><%= application.firstName %> <%= application.lastName %></strong>
          for <strong><%= application.job.jobTitle %></strong>.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2">
          <div class="card admin-card mb-6">
            <div class="card-header">
              <h5>Job Information</h5>
            </div>
            <div class="card-body">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">Job Title</p>
                  <p class="font-semibold text-slate-900 dark:text-white"><%= application.job.jobTitle %></p>
                </div>
                <div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">Employer</p>
                  <p class="font-semibold text-slate-900 dark:text-white"><%= application.job.employer %></p>
                </div>
                <div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">Location</p>
                  <p class="font-semibold text-slate-900 dark:text-white"><%= application.job.location %></p>
                </div>
                <div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">Salary</p>
                  <p class="font-semibold text-slate-900 dark:text-white"><%= application.job.salary || 'Not specified' %></p>
                </div>
              </div>
            </div>
          </div>

          <div class="card admin-card mb-6">
            <div class="card-header">
              <h5>Personal Information</h5>
            </div>
            <div class="card-body">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">First Name</p>
                  <p class="font-semibold text-slate-900 dark:text-white"><%= application.firstName || 'N/A' %></p>
                </div>
                <div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">Last Name</p>
                  <p class="font-semibold text-slate-900 dark:text-white"><%= application.lastName || 'N/A' %></p>
                </div>
                <div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">Email</p>
                  <p class="font-semibold text-slate-900 dark:text-white"><%= application.email || 'N/A' %></p>
                </div>
                <div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">Phone</p>
                  <p class="font-semibold text-slate-900 dark:text-white"><%= application.phone || 'N/A' %></p>
                </div>
                <div class="md:col-span-2">
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">Address</p>
                  <p class="font-semibold text-slate-900 dark:text-white"><%= application.address || 'N/A' %></p>
                </div>
              </div>
            </div>
          </div>

          <div class="card admin-card mb-6">
            <div class="card-header">
              <h5>Professional Experience</h5>
            </div>
            <div class="card-body">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">Current Position</p>
                  <p class="font-semibold text-slate-900 dark:text-white"><%= application.currentPosition || 'N/A' %></p>
                </div>
                <div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">Years of Experience</p>
                  <p class="font-semibold text-slate-900 dark:text-white"><%= application.experience || 'N/A' %></p>
                </div>
                <div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">Expected Salary</p>
                  <p class="font-semibold text-slate-900 dark:text-white"><%= application.expectedSalary || 'N/A' %></p>
                </div>
                <div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">Available From</p>
                  <p class="font-semibold text-slate-900 dark:text-white">
                    <%= application.availableFrom ? new Date(application.availableFrom).toLocaleDateString() : 'N/A' %>
                  </p>
                </div>
              </div>
            </div>
          </div>

          <div class="card admin-card mb-6">
            <div class="card-header">
              <h5>Education</h5>
            </div>
            <div class="card-body">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">Degree</p>
                  <p class="font-semibold text-slate-900 dark:text-white"><%= application.degree || 'N/A' %></p>
                </div>
                <div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">University</p>
                  <p class="font-semibold text-slate-900 dark:text-white"><%= application.university || 'N/A' %></p>
                </div>
                <div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">Graduation Year</p>
                  <p class="font-semibold text-slate-900 dark:text-white"><%= application.graduationYear || 'N/A' %></p>
                </div>
                <div>
                  <p class="text-sm text-slate-600 dark:text-slate-400 mb-1">GPA</p>
                  <p class="font-semibold text-slate-900 dark:text-white"><%= application.gpa || 'N/A' %></p>
                </div>
              </div>
            </div>
          </div>

          <div class="card admin-card mb-6">
            <div class="card-header">
              <h5>Skills</h5>
            </div>
            <div class="card-body">
              <div class="flex flex-wrap gap-2">
                <% if (application.skills) { %>
                  <% application.skills.split(',').forEach(skill => { %>
                    <span class="inline-block bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 px-3 py-1 rounded-full text-sm font-medium">
                      <%= skill.trim() %>
                    </span>
                  <% }); %>
                <% } else { %>
                  <p class="text-slate-500 dark:text-slate-400 text-sm">No skills provided.</p>
                <% } %>
              </div>
            </div>
          </div>

          <div class="card admin-card mb-6">
            <div class="card-header">
              <h5>Cover Letter</h5>
            </div>
            <div class="card-body">
              <p class="text-slate-700 dark:text-slate-300 leading-relaxed whitespace-pre-wrap">
                <%= application.coverLetter || 'No cover letter provided.' %>
              </p>
            </div>
          </div>

          <div class="card admin-card mb-6">
            <div class="card-header">
              <h5>Attachments</h5>
            </div>
            <div class="card-body">
              <div class="space-y-3">
                <% if (application.resume) { %>
                  <div class="flex items-center justify-between p-3 border border-slate-200 dark:border-slate-600 rounded-lg">
                    <div class="flex items-center gap-3">
                      <i class="fas fa-file-pdf text-red-500 text-lg"></i>
                      <div>
                        <p class="font-semibold text-slate-900 dark:text-white">Resume</p>
                        <small class="text-slate-500 dark:text-slate-400">Uploaded Document</small>
                      </div>
                    </div>
                    <a href="<%= application.resume %>" target="_blank" class="text-blue-500 hover:text-blue-700 dark:hover:text-blue-400 transition">
                      <i class="fas fa-download"></i>
                    </a>
                  </div>
                <% } %>

                <% if (application.portfolio) { %>
                  <div class="flex items-center justify-between p-3 border border-slate-200 dark:border-slate-600 rounded-lg">
                    <div class="flex items-center gap-3">
                      <i class="fas fa-link text-blue-500 text-lg"></i>
                      <div>
                        <p class="font-semibold text-slate-900 dark:text-white">Portfolio</p>
                        <small class="text-slate-500 dark:text-slate-400">Additional link or file</small>
                      </div>
                    </div>
                    <a href="<%= application.portfolio %>" target="_blank" class="text-blue-500 hover:text-blue-700 dark:hover:text-blue-400 transition">
                      <i class="fas fa-external-link-alt"></i>
                    </a>
                  </div>
                <% } %>

                <% if (!application.resume && !application.portfolio) { %>
                  <p class="text-slate-500 dark:text-slate-400 text-sm">No attachments provided.</p>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <div class="lg:col-span-1">
          <div class="lg:sticky lg:top-6 space-y-6">
            <div class="card admin-card">
              <div class="card-header">
                <h5>Application Status</h5>
              </div>
              <div class="card-body">
                <% if (application.status === 'Pending') { %>
                  <div class="mb-4 text-center">
                    <span class="inline-block bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200 px-4 py-2 rounded-full font-semibold">
                      <i class="fas fa-clock"></i> <%= application.status %>
                    </span>
                  </div>
                <% } else if (application.status === 'Shortlisted') { %>
                  <div class="mb-4 text-center">
                    <span class="inline-block bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 px-4 py-2 rounded-full font-semibold">
                      <i class="fas fa-star"></i> <%= application.status %>
                    </span>
                  </div>
                <% } else if (application.status === 'Accepted') { %>
                  <div class="mb-4 text-center">
                    <span class="inline-block bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 px-4 py-2 rounded-full font-semibold">
                      <i class="fas fa-check"></i> <%= application.status %>
                    </span>
                  </div>
                <% } else if (application.status === 'Rejected') { %>
                  <div class="mb-4 text-center">
                    <span class="inline-block bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200 px-4 py-2 rounded-full font-semibold">
                      <i class="fas fa-times"></i> <%= application.status %>
                    </span>
                  </div>
                <% } else { %>
                  <div class="mb-4 text-center">
                    <span class="inline-block bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200 px-4 py-2 rounded-full font-semibold">
                      <%= application.status %>
                    </span>
                  </div>
                <% } %>

                <button id="changeStatusBtn" class="admin-btn admin-btn-primary w-full">
                  <i class="fas fa-edit"></i>
                  Change Status
                </button>
              </div>
            </div>

            <div class="card admin-card">
              <div class="card-header">
                <h5>Actions</h5>
              </div>
              <div class="card-body space-y-2">
                <button id="notifyApplicantBtn" class="w-full px-4 py-2 text-white bg-blue-600 hover:bg-blue-700 rounded transition">
                  <i class="fas fa-envelope"></i> Notify Applicant
                </button>
                <button id="deleteApplicationBtn" class="w-full px-4 py-2 text-white bg-red-500 hover:bg-red-600 rounded transition">
                  <i class="fas fa-trash"></i> Delete Application
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="card admin-card">
        <div class="card-body text-center py-12">
          <p class="text-slate-500 dark:text-slate-400">Application not found.</p>
        </div>
      </div>
    <% } %>
  </div>
</div>

<div id="statusModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4 hidden">
  <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg max-w-sm w-full">
    <div class="flex items-center justify-between p-6 border-b border-slate-200 dark:border-slate-700">
      <h3 class="text-xl font-semibold text-slate-900 dark:text-white">Update Status</h3>
      <button class="close-modal text-slate-500 hover:text-slate-700 dark:text-slate-400" type="button">
        <i class="fas fa-times text-xl"></i>
      </button>
    </div>
    <div class="p-6">
      <form id="statusForm">
        <div class="form-group mb-4">
          <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">New Status</label>
          <select id="statusSelect" name="status" class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option value="Pending">Pending</option>
            <option value="Reviewed">Reviewed</option>
            <option value="Shortlisted">Shortlisted</option>
            <option value="Rejected">Rejected</option>
            <option value="Accepted">Accepted</option>
          </select>
        </div>
      </form>
    </div>
    <div class="flex items-center justify-end gap-3 p-6 border-t border-slate-200 dark:border-slate-700">
      <button class="close-modal px-4 py-2 text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 rounded transition" type="button">
        Cancel
      </button>
      <button id="confirmStatusBtn" class="px-4 py-2 text-white bg-blue-500 hover:bg-blue-600 rounded transition" type="button">
        Update Status
      </button>
    </div>
  </div>
</div>

<script>
  const statusModal = document.getElementById('statusModal');
  const changeStatusBtn = document.getElementById('changeStatusBtn');
  const confirmStatusBtn = document.getElementById('confirmStatusBtn');
  const deleteApplicationBtn = document.getElementById('deleteApplicationBtn');
  const notifyApplicantBtn = document.getElementById('notifyApplicantBtn');

  function setupModalListeners(modal) {
    const closeButtons = modal.querySelectorAll('.close-modal');
    closeButtons.forEach((btn) => {
      btn.addEventListener('click', () => {
        modal.classList.add('hidden');
      });
    });

    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.classList.add('hidden');
      }
    });
  }

  setupModalListeners(statusModal);

  if (changeStatusBtn) {
    changeStatusBtn.addEventListener('click', (e) => {
      e.preventDefault();
      document.getElementById('statusSelect').value = '<%= application.status %>';
      statusModal.classList.remove('hidden');
    });
  }

  if (confirmStatusBtn) {
    confirmStatusBtn.addEventListener('click', async () => {
      const status = document.getElementById('statusSelect').value;

      try {
        const response = await fetch('/applications/<%= application.id %>/status', {
          method: 'PATCH',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ status })
        });

        const result = await response.json();
        if (result.success) {
          alert('Status updated successfully!');
          statusModal.classList.add('hidden');
          setTimeout(() => location.reload(), 500);
        } else {
          alert('Error: ' + result.message);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error updating status');
      }
    });
  }

  if (deleteApplicationBtn) {
    deleteApplicationBtn.addEventListener('click', async (e) => {
      e.preventDefault();

      if (confirm('Are you sure you want to delete this application? This action cannot be undone.')) {
        try {
          const response = await fetch('/applications/<%= application.id %>', {
            method: 'DELETE',
            headers: { 'Content-Type': 'application/json' }
          });

          const result = await response.json();
          if (result.success) {
            alert('Application deleted successfully!');
            window.location.href = '/admin/applications';
          } else {
            alert('Error: ' + result.message);
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Error deleting application');
        }
      }
    });
  }

  if (notifyApplicantBtn) {
    notifyApplicantBtn.addEventListener('click', (e) => {
      e.preventDefault();
      const subject = encodeURIComponent('Update on your job application');
      const body = encodeURIComponent('Hello <%= application.firstName %>,\n\nYour application status is currently: <%= application.status %>.\n\nRegards,\nAdmin Team');
      window.location.href = 'mailto:<%= application.email %>?subject=' + subject + '&body=' + body;
    });
  }
</script>
