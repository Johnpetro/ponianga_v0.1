    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Visitor Analytics Chart -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const ctx = document.getElementById('visitorChart').getContext('2d');
        
        // Visitor data for last 7 days - using sample data for now
        const visitorData = [
          { date: 'Mon', visitors: 42 },
          { date: 'Tue', visitors: 35 },
          { date: 'Wed', visitors: 58 },
          { date: 'Thu', visitors: 47 },
          { date: 'Fri', visitors: 62 },
          { date: 'Sat', visitors: 39 },
          { date: 'Sun', visitors: 51 }
        ];

        const labels = visitorData.map(item => item.date);
        const visitors = visitorData.map(item => item.visitors);
        
        const chart = new Chart(ctx, {
          type: 'line',
          data: {
            labels: labels,
            datasets: [
              {
                label: 'Daily Visitors',
                data: visitors,
                borderColor: '#6366f1',
                backgroundColor: 'rgba(99, 102, 241, 0.1)',
                borderWidth: 3,
                fill: true,
                tension: 0.4,
                pointBackgroundColor: '#6366f1',
                pointBorderColor: '#ffffff',
                pointBorderWidth: 2,
                pointRadius: 6,
                pointHoverRadius: 8
              },
              {
                label: 'Target (50 visitors)',
                data: Array(labels.length).fill(50),
                borderColor: '#ef4444',
                backgroundColor: 'rgba(239, 68, 68, 0.05)',
                borderWidth: 2,
                borderDash: [5, 5],
                fill: false,
                pointRadius: 0,
                pointHoverRadius: 0
              }
            ]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                position: 'top',
                labels: {
                  usePointStyle: true,
                  padding: 20
                }
              },
              tooltip: {
                mode: 'index',
                intersect: false,
                backgroundColor: 'rgba(0, 0, 0, 0.8)',
                titleColor: '#ffffff',
                bodyColor: '#ffffff',
                borderColor: '#6366f1',
                borderWidth: 1,
                cornerRadius: 8,
                displayColors: true
              }
            },
            interaction: {
              mode: 'nearest',
              axis: 'x',
              intersect: false
            },
            scales: {
              x: {
                display: true,
                title: {
                  display: true,
                  text: 'Days',
                  color: '#6b7280',
                  font: {
                    size: 12,
                    weight: '500'
                  }
                },
                grid: {
                  color: 'rgba(0, 0, 0, 0.05)'
                },
                ticks: {
                  color: '#6b7280'
                }
              },
              y: {
                display: true,
                title: {
                  display: true,
                  text: 'Number of Visitors',
                  color: '#6b7280',
                  font: {
                    size: 12,
                    weight: '500'
                  }
                },
                beginAtZero: true,
                grid: {
                  color: 'rgba(0, 0, 0, 0.05)'
                },
                ticks: {
                  color: '#6b7280',
                  stepSize: 10
                }
              }
            },
            elements: {
              point: {
                hoverBackgroundColor: '#6366f1'
              }
            },
            animation: {
              duration: 2000,
              easing: 'easeInOutQuart'
            }
          }
        });

        // Animate progress bars on load
        setTimeout(() => {
          document.querySelectorAll('.progress-bar').forEach((bar, index) => {
            bar.style.animationDelay = `${0.5 + (index * 0.1)}s`;
          });
        }, 100);
      });
    </script>

