



 
        <!-- [ breadcrumb ] end -->

        <!-- [ Main Content ] start -->
        <style>
          @keyframes fadeInUp {
            from {
              opacity: 0;
              transform: translateY(20px);
            }
            to {
              opacity: 1;
              transform: translateY(0);
            }
          }

          @keyframes scaleIn {
            from {
              opacity: 0;
              transform: scale(0.95);
            }
            to {
              opacity: 1;
              transform: scale(1);
            }
          }

          @keyframes slideInWidth {
            from {
              width: 0;
              opacity: 0;
            }
            to {
              width: 100%;
              opacity: 1;
            }
          }

          .stats-card {
            animation: fadeInUp 0.6s ease-out;
          }

          .stats-card:nth-child(1) {
            animation-delay: 0.1s;
          }

          .stats-card:nth-child(2) {
            animation-delay: 0.2s;
          }

          .stats-card:nth-child(3) {
            animation-delay: 0.3s;
          }

          .stats-card:nth-child(4) {
            animation-delay: 0.4s;
          }

          .stats-card:nth-child(5) {
            animation-delay: 0.5s;
          }

          .progress-bar {
            animation: slideInWidth 1.2s ease-out 0.5s both;
          }

          .card {
            transition: all 0.3s ease-out;
          }

          .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
          }
        </style>

        <div class="overflow-y-auto h-[calc(100vh-64px)]">
          <div class="grid grid-cols-12 gap-x-6 p-6 m-0 overflow-hidden w-full">
          
          <!-- Total Jobs Card -->
          <div class="col-span-12 xl:col-span-4 md:col-span-6 mt-6 stats-card">
            <div class="card gap-y-6">
              <div class="card-header !pb-0 !border-b-0">
                <h5>Total Jobs</h5>
              </div>
              <div class="card-body">
                <div class="flex items-center justify-between gap-3 flex-wrap">
                  <h3 class="font-light flex items-center mb-0">
                    <i class="feather icon-briefcase text-primary-500 text-[30px] mr-1.5"></i>
                    <%= stats.totalJobs %>
                  </h3>
                  <p class="mb-0 text-xs text-gray-500">Active Listings</p>
                </div>
                <div class="w-full bg-theme-bodybg rounded-lg h-1.5 mt-6 dark:bg-themedark-bodybg">
                  <div class="bg-primary-500 h-full rounded-lg shadow-[0_10px_20px_0_rgba(0,0,0,0.3)] progress-bar" role="progressbar"
                    style="width: 75%"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Total Scholarships Card -->
          <div class="col-span-12 xl:col-span-4 md:col-span-6 mt-6 stats-card">
            <div class="card gap-y-6">
              <div class="card-header !pb-0 !border-b-0">
                <h5>Total Scholarships</h5>
              </div>
              <div class="card-body">
                <div class="flex items-center justify-between gap-3 flex-wrap">
                  <h3 class="font-light flex items-center mb-0">
                    <i class="feather icon-award text-success-500 text-[30px] mr-1.5"></i>
                    <%= stats.totalScholarships %>
                  </h3>
                  <p class="mb-0 text-xs text-gray-500">Available</p>
                </div>
                <div class="w-full bg-theme-bodybg rounded-lg h-1.5 mt-6 dark:bg-themedark-bodybg">
                  <div class="bg-success-500 h-full rounded-lg shadow-[0_10px_20px_0_rgba(0,0,0,0.3)] progress-bar" role="progressbar"
                    style="width: 60%"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Total Applications Card -->
          <div class="col-span-12 xl:col-span-4 mt-6 stats-card">
            <div class="card gap-y-6">
              <div class="card-header !pb-0 !border-b-0">
                <h5>Total Applications</h5>
              </div>
              <div class="card-body">
                <div class="flex items-center justify-between gap-3 flex-wrap">
                  <h3 class="font-light flex items-center mb-0">
                    <i class="feather icon-inbox text-warning-500 text-[30px] mr-1.5"></i>
                    <%= stats.totalAllApplications %>
                  </h3>
                  <p class="mb-0 text-xs text-gray-500">Job + Scholarship</p>
                </div>
                <div class="w-full bg-theme-bodybg rounded-lg h-1.5 mt-6 dark:bg-themedark-bodybg">
                  <div class="bg-warning-500 h-full rounded-lg shadow-[0_10px_20px_0_rgba(0,0,0,0.3)] progress-bar" role="progressbar"
                    style="width: 80%"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Additional Stats Row -->
          <div class="col-span-12 xl:col-span-6 mt-6 stats-card">
            <div class="card">
              <div class="card-header">
                <h5>Job Applications</h5>
              </div>
              <div class="card-body">
                <div class="flex items-center justify-between">
                  <span class="text-sm">Total Job Applications:</span>
                  <span class="font-bold text-lg text-primary-500"><%= stats.totalApplications %></span>
                </div>
              </div>
            </div>
          </div>

          <div class="col-span-12 xl:col-span-6 mt-6 stats-card">
            <div class="card">
              <div class="card-header">
                <h5>Scholarship Applications</h5>
              </div>
              <div class="card-body">
                <div class="flex items-center justify-between">
                  <span class="text-sm">Total Scholarship Applications:</span>
                  <span class="font-bold text-lg text-success-500"><%= stats.totalScholarshipApplications %></span>
                </div>
              </div>
            </div>
          </div>
          
        </div>
        <!-- [ Main Content ] end -->
        </div>
     
