
<div class="admin-page">
  <div class="admin-page-inner">
    <div class="admin-section-head">
      <h2>Scholarship Applicants</h2>
      <p>Review submitted applications and manage applicant statuses.</p>
    </div>
    <!-- Scholarship Info Banner (if specific scholarship) -->
    <% if (scholarship) { %>
      <div class="mb-6 bg-gradient-to-r from-purple-500 to-purple-600 dark:from-purple-900 dark:to-purple-800 rounded-lg p-6 text-white shadow-lg">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          <div>
            <p class="text-purple-200 text-sm font-semibold uppercase">Program</p>
            <p class="text-2xl font-bold mt-1"><%= scholarship.programName %></p>
          </div>
          <div>
            <p class="text-purple-200 text-sm font-semibold uppercase">College</p>
            <p class="text-lg font-semibold mt-1"><%= scholarship.collegeName %></p>
          </div>
          <div>
            <p class="text-purple-200 text-sm font-semibold uppercase">Sponsorship</p>
            <p class="text-lg font-semibold mt-1"><%= scholarship.sponsorship %></p>
          </div>
          <div>
            <p class="text-purple-200 text-sm font-semibold uppercase">Total Applications</p>
            <p class="text-2xl font-bold mt-1"><%= totalApplicants %></p>
          </div>
        </div>
      </div>
    <% } %>

    <div class="card table-card admin-card gap-y-6">
      <div class="card-header admin-toolbar">
        <h5>All Applicants</h5>
        <div class="admin-toolbar-actions">
          <div class="flex items-center gap-1">
            <label class="text-sm font-semibold text-slate-700 dark:text-slate-300">Sort by Status:</label>
            <select id="statusFilter" class="px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              <option value="">All Statuses</option>
              <option value="Pending">Pending</option>
              <option value="Approved">Approved</option>
              <option value="Rejected">Rejected</option>
            </select>
          </div>
          <button id="printPdfBtn" class="admin-btn text-white bg-red-500 hover:bg-red-600 rounded transition flex items-center gap-2">
            <i class="fas fa-file-pdf"></i> Print to PDF
          </button>
        </div>
      </div>
      
      <div class="card-body">
        <div class="admin-table-wrap">
          <table class="admin-table text-sm">
            <thead>
              <tr class="border-b border-slate-200 dark:border-slate-600">
                <th class="text-left px-4 py-3 font-semibold text-slate-900 dark:text-white">No</th>
                <th class="text-left px-4 py-3 font-semibold text-slate-900 dark:text-white">Name</th>
                <th class="text-left px-4 py-3 font-semibold text-slate-900 dark:text-white">Email</th>
                <th class="text-left px-4 py-3 font-semibold text-slate-900 dark:text-white">Phone</th>
                <th class="text-left px-4 py-3 font-semibold text-slate-900 dark:text-white">
                  <% if (!scholarship) { %>
                    Scholarship
                  <% } else { %>
                    Status
                  <% } %>
                </th>
                <th class="text-left px-4 py-3 font-semibold text-slate-900 dark:text-white">Date Applied</th>
                <th class="text-center px-4 py-3 font-semibold text-slate-900 dark:text-white">Actions</th>
              </tr>
            </thead>
            <tbody> 
              <% if (applicants && applicants.length > 0) { %>
                <% applicants.forEach((app, index) => { %>
                  <tr class="border-b border-slate-200 dark:border-slate-600 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                    <td class="px-4 py-3 text-slate-700 dark:text-slate-300">
                      <span class="font-semibold"><%= (currentPage - 1) * applicantsPerPage + index + 1 %></span>
                    </td>
                    <td class="px-4 py-3 text-slate-700 dark:text-slate-300">
                      <h6 class="font-semibold"><%= app.firstName %> <%= app.lastName %></h6>
                    </td>
                    <td class="px-4 py-3 text-slate-700 dark:text-slate-300">
                      <%= app.email %>
                    </td>
                    <td class="px-4 py-3 text-slate-700 dark:text-slate-300">
                      <%= app.phone %>
                    </td>
                    <td class="px-4 py-3 text-slate-700 dark:text-slate-300">
                      <% if (scholarship) { %>
                        <% if (app.status === 'Pending') { %>
                          <span class="inline-block bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-xs font-semibold">
                            Pending
                          </span>
                        <% } else if (app.status === 'Approved') { %>
                          <span class="inline-block bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-semibold">
                            Approved
                          </span>
                        <% } else if (app.status === 'Rejected') { %>
                          <span class="inline-block bg-red-100 text-red-800 px-3 py-1 rounded-full text-xs font-semibold">
                            Rejected
                          </span>
                        <% } else { %>
                          <span class="inline-block bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-xs font-semibold">
                            <%= app.status %>
                          </span>
                        <% } %>
                      <% } else { %>
                        <span class="text-slate-700 dark:text-slate-300 font-medium">
                          <%= app.scholarship ? app.scholarship.programName : 'N/A' %>
                        </span>
                      <% } %>
                    </td>
                    <td class="px-4 py-3 text-slate-700 dark:text-slate-300">
                      <small><%= new Date(app.createdAt).toLocaleDateString() %></small>
                    </td>
                    <td class="px-4 py-3 text-center">
                      <div class="flex items-center justify-center gap-2 flex-wrap">
                        <% if (app.passport) { %>
                          <a href="<%= app.passport %>" target="_blank" class="admin-action-btn text-red-500 hover:text-red-700 dark:hover:text-red-400 transition" title="Download Passport">
                            <i class="fas fa-file-pdf text-sm"></i>
                          </a>
                        <% } %>
                        <button class="admin-action-btn text-blue-500 hover:text-blue-700 dark:hover:text-blue-400 transition edit-status-btn" title="Change Status" data-app-id="<%= app.id %>" data-status="<%= app.status %>">
                          <i class="fas fa-edit text-sm"></i>
                        </button>
                        <button class="admin-action-btn text-red-500 hover:text-red-700 dark:hover:text-red-400 transition delete-app-btn" title="Delete" data-app-id="<%= app.id %>">
                          <i class="fas fa-trash text-sm"></i>
                        </button>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="7" class="px-4 py-8 text-center text-slate-500 dark:text-slate-400">
                    No applicants found.
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Pagination Controls -->
        <% if (totalPages > 1) { %>
          <div class="admin-pagination mt-6 px-4 py-4 border-t border-slate-200 dark:border-slate-600">
            <div class="text-sm text-slate-600 dark:text-slate-400">
              Showing <span class="font-semibold"><%= applicants && applicants.length > 0 ? (currentPage - 1) * applicantsPerPage + 1 : 0 %></span> 
              to <span class="font-semibold"><%= Math.min(currentPage * applicantsPerPage, totalApplicants) %></span> 
              of <span class="font-semibold"><%= totalApplicants %></span> applicants
            </div>

            <div class="admin-toolbar-actions">
              <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>" class="px-3 py-2 text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 rounded transition">
                  Previous
                </a>
              <% } %>

              <div class="flex items-center gap-1">
                <% for (let i = 1; i <= totalPages; i++) { %>
                  <% if (i === currentPage) { %>
                    <button disabled class="px-3 py-2 text-white bg-blue-500 rounded font-semibold"><%= i %></button>
                  <% } else { %>
                    <a href="?page=<%= i %>" class="px-3 py-2 text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 rounded transition"><%= i %></a>
                  <% } %>
                <% } %>
              </div>

              <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>" class="px-3 py-2 text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 rounded transition">
                  Next
                </a>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Status Update Modal -->
<div id="statusModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4 hidden">
  <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg max-w-sm w-full">
    <div class="flex items-center justify-between p-6 border-b border-slate-200 dark:border-slate-700">
      <h3 class="text-xl font-semibold text-slate-900 dark:text-white">Update Status</h3>
      <button class="close-modal text-slate-500 hover:text-slate-700 dark:text-slate-400">
        <i class="fas fa-times text-xl"></i>
      </button>
    </div>
    <div class="p-6">
      <form id="statusForm">
        <div class="form-group mb-4">
          <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">New Status</label>
          <select id="statusSelect" name="status" class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option value="Pending">Pending</option>
            <option value="Approved">Approved</option>
            <option value="Rejected">Rejected</option>
          </select>
        </div>
      </form>
    </div>
    <div class="flex items-center justify-end gap-3 p-6 border-t border-slate-200 dark:border-slate-700">
      <button class="close-modal px-4 py-2 text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 rounded transition">
        Cancel
      </button>
      <button id="confirmStatusBtn" class="px-4 py-2 text-white bg-blue-500 hover:bg-blue-600 rounded transition">
        Update Status
      </button>
    </div>
  </div>
</div>

<script>
  let currentAppId = null;
  const statusModal = document.getElementById('statusModal');

  // Setup modal listeners
  function setupModalListeners(modal) {
    const closeButtons = modal.querySelectorAll('.close-modal');
    closeButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        modal.classList.add('hidden');
      });
    });
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.classList.add('hidden');
      }
    });
  }

  setupModalListeners(statusModal);

  // Edit status
  document.querySelectorAll('.edit-status-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      currentAppId = btn.dataset.appId;
      document.getElementById('statusSelect').value = btn.dataset.status;
      statusModal.classList.remove('hidden');
    });
  });

  // Confirm status update
  document.getElementById('confirmStatusBtn').addEventListener('click', async () => {
    const status = document.getElementById('statusSelect').value;
    
    try {
      const response = await fetch(`/scholarship-applicants/${currentAppId}/status`, {
        method: 'PATCH',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ status })
      });
      const result = await response.json();
      if (result.success) {
        alert('Status updated successfully!');
        statusModal.classList.add('hidden');
        setTimeout(() => location.reload(), 500);
      } else {
        alert('Error: ' + result.message);
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error updating status');
    }
  });

  // Delete application
  document.querySelectorAll('.delete-app-btn').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      e.preventDefault();
      if (confirm('Are you sure you want to delete this application?')) {
        const appId = btn.dataset.appId;
        
        try {
          const response = await fetch(`/scholarship-applicants/${appId}`, {
            method: 'DELETE',
            headers: { 'Content-Type': 'application/json' }
          });
          const result = await response.json();
          if (result.success) {
            alert('Application deleted successfully!');
            setTimeout(() => location.reload(), 500);
          } else {
            alert('Error: ' + result.message);
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Error deleting application');
        }
      }
    });
  });

  // Status filter functionality
  document.getElementById('statusFilter').addEventListener('change', (e) => {
    const selectedStatus = e.target.value;
    const rows = document.querySelectorAll('tbody tr');
    let visibleCount = 0;

    rows.forEach(row => {
      const statusCell = row.querySelector('td:nth-child(5)');
      if (!statusCell) return; // Skip empty rows
      
      const statusText = statusCell.textContent.trim();
      
      if (selectedStatus === '' || statusText === selectedStatus) {
        row.style.display = '';
        visibleCount++;
      } else {
        row.style.display = 'none';
      }
    });

    // Show message if no results
    const noResultsRow = document.querySelector('tbody tr:only-child');
    if (visibleCount === 0) {
      const tbody = document.querySelector('tbody');
      const existingMessage = tbody.querySelector('.no-results-message');
      if (!existingMessage) {
        const messageRow = document.createElement('tr');
        messageRow.className = 'no-results-message';
        messageRow.innerHTML = `<td colspan="7" class="px-4 py-8 text-center text-slate-500 dark:text-slate-400">No applicants found with status: ${selectedStatus}</td>`;
        tbody.appendChild(messageRow);
      }
    } else {
      const existingMessage = document.querySelector('.no-results-message');
      if (existingMessage) {
        existingMessage.remove();
      }
    }
  });

  // Print to PDF
  document.getElementById('printPdfBtn').addEventListener('click', () => {
    const table = document.querySelector('table');
    if (!table) return;

    // Create a new window for printing
    const printWindow = window.open('', '', 'width=900,height=600');
    
    // Get scholarship name if available
    const scholarshipName = document.querySelector('h1') ? document.querySelector('h1').textContent : 'Scholarship Applicants';
    const dateNow = new Date().toLocaleDateString();

    // Create HTML for PDF
    let html = `
      <!DOCTYPE html>
      <html>
      <head>
        <meta charset="UTF-8">
        <title>Scholarship Applicants Report</title>
        <style>
          body { font-family: Arial, sans-serif; margin: 20px; }
          h1 { color: #333; text-align: center; }
          .date { text-align: center; color: #666; margin-bottom: 20px; }
          table { width: 100%; border-collapse: collapse; margin-top: 20px; }
          th { background-color: #3b82f6; color: white; padding: 12px; text-align: left; border: 1px solid #ddd; font-weight: bold; }
          td { padding: 10px; border: 1px solid #ddd; }
          tr:nth-child(even) { background-color: #f9fafb; }
          tr:hover { background-color: #f3f4f6; }
          .icon { font-size: 16px; text-align: center; width: 30px; }
          .pending-icon { color: #f59e0b; }
          .approved-icon { color: #10b981; }
          .rejected-icon { color: #ef4444; }
        </style>
      </head>
      <body>
        <h1>Scholarship Applicants Report</h1>
        <div class="date">Generated on: ${dateNow}</div>
        <table>
          <thead>
            <tr>
              <th>No</th>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
            </tr>
          </thead>
          <tbody>
    `;

    // Extract table data - only visible rows
    const rows = table.querySelectorAll('tbody tr');
    let rowNum = 1;
    rows.forEach(row => {
      if (row.style.display === 'none') return; // Skip hidden rows
      
      const cells = row.querySelectorAll('td');
      if (cells.length > 0) {
        const name = cells[1]?.textContent.trim() || '';
        const email = cells[2]?.textContent.trim() || '';
        const phone = cells[3]?.textContent.trim() || '';

        html += `
          <tr>
            <td>${rowNum}</td>
            <td>${name}</td>
            <td>${email}</td>
            <td>${phone}</td>
          </tr>
        `;
        rowNum++;
      }
    });

    html += `
          </tbody>
        </table>
      </body>
      </html>
    `;

    printWindow.document.write(html);
    printWindow.document.close();
    
    // Print after content is loaded
    setTimeout(() => {
      printWindow.print();
      printWindow.close();
    }, 250);
  });
</script>
