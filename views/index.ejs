<body>
    <style>
        /* Smooth transition for buttons and specific hover for the 'postbtn' button */
        .btn {
            transition: background-color 0.25s ease, color 0.25s ease;
        }

        /* General button hover (keeps existing behavior) */
        .btn:hover {
            background: #14205a !important;
        }

        /* Ensure the Learn More About Us button (class .postbtn) also uses the same hover color
           and is targeted specifically in case inline styles exist */
        .btn.postbtn:hover {
            background: #14205a !important;
        }
    </style>

    <main>

        <!-- slider Area Start-->
        <div class="slider-area ">
            <!-- Mobile Menu -->
