                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Our Services Start -->
        ->
        <!-- Our Services End -->
        <!-- Online CV Area Start -->
        <div class="online-cv cv-bg section-overly pt-90 pb-120" data-background="assets/img/gallery/cv_bg.jpg">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-10">
                        <div class="cv-caption text-center">
                            <p class="pera1">Career Development</p>
                            <p class="pera2">Make a Difference with Your Professional Resume!</p>
                            <a href="/application-form" class="border-btn2 border-btn4">Upload your CV</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Online CV Area End-->
        <!-- Featured_job_start -->
        <section class="featured-job-area feature-padding">
            <div class="container">
                <!-- Section Tittle -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-tittle text-center">
                            <!-- <span>Latest Openings</span> -->
                            <h2>Featured Jobs</h2>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-xl-10">
                        <!-- Loop through featured jobs (show only 3) -->
                        <% if (jobs && jobs.length> 0) { %>
                            <% const featuredJobs=jobs.slice(0, 3); %>
                                <% featuredJobs.forEach((job)=> { %>
                                    <!-- single-job-content -->
                                    <form method="POST" action="/job-details" style="display: contents;">
                                        <input type="hidden" name="jobId" value="<%= job.id %>">
                                        <div class="single-job-items mb-30">
                                            <div class="job-items">
                                                <div class="company-img">
                                                    <button type="submit"
                                                        style="background: none; border: none; padding: 0; cursor: pointer;">
                                                        <img src="assets/img/icon/job-list1.png" alt="">
                                                    </button>
                                                </div>
                                                <div class="job-tittle">
                                                    <button type="submit"
                                                        style="background: none; border: none; padding: 0; cursor: pointer; text-align: left; width: 100%;">
                                                        <h4
                                                            style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; color: #0F3460;">
                                                            <%= job.jobTitle %>
                                                        </h4>
                                                    </button>
                                                    <ul>
                                                        <li>
                                                            <%= job.employer %>
                                                        </li>
                                                        <li><i class="fas fa-map-marker-alt"></i>
                                                            <%= job.location %>
                                                        </li>
                                                        <li>
                                                            <%= job.salary %>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="items-link f-right">
                                                <button type="submit"
                                                    style="background: none; border: none; padding: 0; cursor: pointer; color: #0F3460; text-decoration: none;">
                                                    <%= job.jobType %>
                                                </button>
                                                <span>Applay</span>
                                            </div>
                                        </div>
                                    </form>
                                    <% }); %>
                                        <% } else { %>
                                            <div class="single-job-items mb-30">
                                                <p class="text-center">No featured jobs available at the moment.</p>
                                            </div>
                                            <% } %>
                    </div>
        </section>
        <!-- Featured_job_end -->
        <!-- How  Apply Process Start-->
        <div class="apply-process-area apply-bg pt-150 pb-150" data-background="assets/img/gallery/how-applybg.png">
