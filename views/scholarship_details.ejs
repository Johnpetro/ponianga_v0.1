<body>
    <main>
        <!-- Hero Area Start -->
        <div class="slider-area">
            <style>
                /* Page-scoped hero tweaks: shadowed image, left text and stunning entrance animations */
                .single-slider.hero-shadow { position: relative; overflow: hidden; }
                .single-slider.hero-shadow .hero-image{
                    position: absolute;
                    inset: 0;
                    background-size: cover;
                    background-position: center center;
                    z-index: 0;
                    filter: brightness(0.55);
                    box-shadow: 0 30px 80px rgba(0,0,0,0.55);
                    transform-origin: center;
                    animation: heroZoom 1.5s ease-out both;
                }
                .single-slider.hero-shadow .hero-cap{ 
                    position: relative; 
                    z-index: 2; 
                    padding: 80px 0; 
                }
                .hero-cap.left-align{ text-align: left; }

                /* Enhanced CSS keyframe animations */
                @keyframes heroZoom { 
                    from{ transform: scale(1.1); opacity: 0; } 
                    to{ transform: scale(1); opacity: 1; } 
                }
                @keyframes fadeInLeft { 
                    from{ opacity: 0; transform: translateX(-50px) scale(0.95); } 
                    to{ opacity:1; transform: translateX(0) scale(1); } 
                }
                @keyframes fadeInUp { 
                    from{ opacity: 0; transform: translateY(30px) scale(0.98); } 
                    to{ opacity:1; transform: translateY(0) scale(1); } 
                }
                @keyframes pulse {
                    0%, 100% { transform: scale(1); box-shadow: 0 5px 15px rgba(31, 111, 192, 0.3); }
                    50% { transform: scale(1.02); box-shadow: 0 8px 25px rgba(31, 111, 192, 0.5); }
                }
                
                .anim-left { 
                    animation: fadeInLeft 1.0s cubic-bezier(0.25, 0.46, 0.45, 0.94) both; 
                    animation-delay: 0.3s;
                }
                .anim-up { 
                    animation: fadeInUp 1.0s cubic-bezier(0.25, 0.46, 0.45, 0.94) both; 
                }
                
                /* Hero button animations */
                
                .hero-btn:hover {
                    transform: translateY(0);
                }
                
                /* Smooth scroll behavior */
                html { scroll-behavior: smooth; }

                /* Responsive adjustments */
                @media (max-width: 768px){
                    .single-slider.hero-shadow .hero-cap{ padding: 40px 0; }
                    .single-slider.hero-shadow .hero-image{ box-shadow: 0 18px 48px rgba(0,0,0,0.5); }
                    .anim-left, .anim-up { 
                        animation-duration: 0.8s; 
                    }
                }

                /* Application modal polish */
                #applicationModal .modal-dialog {
                    max-width: 1040px;
                    width: 92%;
                    margin: 1.5rem auto;
                }
                #applicationModal .modal-content {
                    border: 0;
                    border-radius: 16px;
                    overflow: hidden;
                    box-shadow: 0 22px 64px rgba(15, 52, 96, 0.2);
                }
                #applicationModal .modal-header {
                    border-bottom: 1px solid #e8eef5;
                    background: linear-gradient(135deg, #0f3460 0%, #1f6fc0 100%);
                    color: #fff;
                    padding: 1rem 1.25rem;
                }
                #applicationModal .modal-title {
                    font-size: 1.1rem;
                    font-weight: 700;
                    letter-spacing: 0.2px;
                }
                #applicationModal .close {
                    color: #fff;
                    opacity: 0.9;
                    text-shadow: none;
                }
                #applicationModal .modal-body {
                    max-height: 78vh;
                    overflow-y: auto;
                    padding: 22px 24px 14px;
                    background: #f7fafe;
                }
                #applicationModal .app-intro {
                    margin: 0 0 16px;
                    color: #5c6f82;
                    font-size: 0.95rem;
                }
                #applicationModal .row.app-form-grid > [class*="col-"] {
                    margin-bottom: 12px;
                }
                #applicationModal .form-group {
                    margin-bottom: 0;
                }
                #applicationModal input.form-control,
                #applicationModal textarea.form-control {
                    border-radius: 10px;
                    border: 1px solid #d6e0ea;
                    background: #fff;
                    min-height: 46px;
                    padding: 10px 12px;
                    transition: border-color 0.2s ease, box-shadow 0.2s ease;
                }
                #applicationModal input.form-control:focus,
                #applicationModal textarea.form-control:focus {
                    border-color: #1f6fc0;
                    box-shadow: 0 0 0 3px rgba(31, 111, 192, 0.14);
                }
                #applicationModal label.form-label {
                    color: #3a4b5d;
                    font-size: 0.9rem;
                    font-weight: 600;
                    margin-bottom: 6px;
                }
                #applicationModal small.text-muted {
                    display: block;
                    margin-top: 6px;
                    font-size: 0.8rem;
                }
                #applicationModal .app-actions {
                    position: sticky;
                    bottom: -1px;
                    background: #fff;
                    border-top: 1px solid #e8eef5;
                    margin-top: 14px;
                    padding: 14px 0 6px;
                    z-index: 2;
                }
                #applicationModal .app-actions .btn {
                    min-width: 160px;
                    border-radius: 8px;
                }
                @media (max-width: 767px) {
                    #applicationModal .modal-dialog {
                        width: 96%;
                        margin: 0.8rem auto;
                    }
                    #applicationModal .modal-body {
                        max-height: 82vh;
                        padding: 16px 14px 10px;
                    }
                    #applicationModal .app-actions .btn {
                        width: 100%;
                        margin: 0 0 10px 0 !important;
                    }
                }
            </style>

            <div class="single-slider hero-shadow slider-height2 d-flex align-items-center">
                <!-- background image element (gives us control for shadow & filters) -->
                <div class="hero-image" style="background-image: url('/assets/img/hero/dg.png');"></div>

                <div class="container">
                    <div class="row">
                        <div class="col-xl-7 col-lg-8">
                            <div class="hero-cap left-align text-white">
                                <h2 class="anim-left text-white" style="margin-top:12px;" data-animation="fadeInLeft" data-delay=".3s">Scholarship Details</h2>
                                <p class="anim-up text-white" style="margin-top:12px; opacity:.92; font-size: 23px;" data-animation="fadeInUp" data-delay=".5s">Find detailed scholarship information and how to apply.</p>
                                <div class="hero-btn anim-up" style="margin-top: 25px;" data-animation="fadeInUp" data-delay=".7s">
                                    <a href="#scholarship-details" class=" hero-btn" style="background: var(--primary, #1F6FC0); color: white; padding: 12px 30px; border-radius: 25px; text-decoration: none; display: inline-block; transition: all 0.3s ease; box-shadow: 0 5px 15px rgba(31, 111, 192, 0.3);">
                                        <i class="fas fa-arrow-down" style="margin-right: 8px;"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Hero Area End -->

        <!-- Job Details Start -->
        <div id="scholarship-details" class="job-post-company pt-120 pb-120">
            <div class="container">
                <div class="row justify-content-between">
                    <!-- Left Content -->
                    <div class="col-xl-7 col-lg-8">
                        <!-- job single -->
                        <div class="single-job-items mb-50">
                            <div class="job-items">
                                <div class="company-img company-img-details">
                                    <% if (scholarship && scholarship.image && scholarship.image.trim() !== '') { %>
                                        <a href="#"><img src="<%= scholarship.image %>" alt="<%= scholarship.programName %>" style="width: 85px; height: 85px; object-fit: cover; border-radius: 8px;"></a>
                                    <% } else { %>
                                        <a href="#"><img src="/assets/img/icon/job-list1.png" alt="Default scholarship icon" style="width: 85px; height: 85px; object-fit: cover; border-radius: 8px;"></a>
                                    <% } %>
                                </div>
                                <div class="job-tittle">
                                    <a href="#">
                                        <h4>
                                            <%= scholarship ? scholarship.programName : 'Program Name' %>
                                        </h4>
                                    </a>
                                    <ul>
                                        <li>
                                            <%= scholarship ? scholarship.collegeName : 'College Name' %>
                                        </li>
                                        <li><i class="fas fa-map-marker-alt"></i>
                                            <%= scholarship ? scholarship.sponsorship : 'Sponsorship' %>
                                        </li>
                                        <li>
                                            <%= scholarship ? scholarship.vacancy : 'Vacancy' %>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- job single End -->

                        <div class="job-post-details">
                            <div class="post-details1 mb-50">
                                <!-- Small Section Tittle -->
                                <div class="small-section-tittle">
                                    <h4>Program Description</h4>
                                </div>
                                <p>
                                    <%= scholarship ? scholarship.description : 'No description available' %>
                                </p>
                            </div>

                            <div class="post-details2  mb-50">
                                <!-- Small Section Tittle -->
                                <div class="small-section-tittle">
                                    <h4>Requirements</h4>
                                </div>
                                <ul>
                                    <li>
                                        <%= scholarship ? scholarship.requirements
                                            : 'Requirements information not available' %>
                                    </li>
                                </ul>
                            </div>
                        </div>
 
                    </div>
                    <!-- Right Content -->
                    <div class="col-xl-4 col-lg-4">
                        <div class="post-details3  mb-50">
                            <!-- Small Section Tittle -->
                            <div class="small-section-tittle">
                                <h4>Scholarship Overview</h4>
                            </div>
                            <ul>
                                <li>Posted date : <span>
                                        <%= scholarship ? new Date(scholarship.createdAt).toLocaleDateString('en-US', {
                                            year: 'numeric' , month: 'short' , day: 'numeric' }) : 'N/A' %>
                                    </span></li>
                                <li>College : <span>
                                        <%= scholarship ? scholarship.collegeName : 'N/A' %>
                                    </span></li>
                                <li>Sponsorship : <span>
                                        <%= scholarship ? scholarship.sponsorship : 'N/A' %>
                                    </span></li>
                                <li>Vacancy : <span>
                                        <%= scholarship ? scholarship.vacancy : 'N/A' %>
                                    </span></li>
                                <li>Deadline : <span>
                                        <%= scholarship ? new Date(scholarship.deadline).toLocaleDateString('en-US', {
                                            year: 'numeric' , month: 'short' , day: 'numeric' }) : 'N/A' %>
                                    </span></li>
                                <li>Status : <span>
                                        <%= scholarship && scholarship.status==='Active' ? 'Open' : scholarship ?
                                            scholarship.status : 'N/A' %>
                                    </span></li>
                            </ul>
                            <div class="apply-btn2">
                                <% if (scholarship && scholarship.status==='Closed' ) { %>
                                    <a href="#" class="btn head-btn2"
                                        style="opacity: 0.6; cursor: not-allowed; pointer-events: none;">Apply Now
                                        (Closed)</a>
                                    <% } else { %>
                                        <a href="#" class="btn head-btn2" data-toggle="modal"
                                            data-target="#applicationModal">Apply Now</a>
                                        <% } %>
                            </div>
                        </div>
                        <div class="post-details4  mb-50">
                            <!-- Small Section Tittle -->
                            <div class="small-section-tittle">
                                <h4>Organization Information</h4>
                            </div>
                            <span>
                                <%= scholarship ? scholarship.collegeName : 'Organization' %>
                            </span>
                            <p>It is a long established fact that a reader will be distracted by the readable content of
                                a page when looking at its layout.</p>
                            <ul>
                                <li>Name: <span>
                                        <%= scholarship ? scholarship.collegeName : 'N/A' %>
                                    </span></li>
                                <li>Program : <span>
                                        <%= scholarship ? scholarship.programName : 'N/A' %>
                                    </span></li>
                                <li>Sponsorship: <span>
                                        <%= scholarship ? scholarship.sponsorship : 'N/A' %>
                                    </span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Job Details End -->

        <!-- Related Scholarships Start -->
        <section class="featured-job-area feature-padding">
            <div class="container">
                <!-- Section Tittle -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-tittle text-center">
                           
                            <h2>Related Scholarships</h2>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-xl-10">
                        <!-- Loop through related scholarships -->
                        <div class="single-job-items mb-30">
                            <p class="text-center">More scholarship opportunities coming soon!</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Related Scholarships End -->

        
        <!-- Toast Notification Container -->
        <div id="toastContainer" style="position: fixed; top: 90px; right: 20px; z-index: 2000;"></div>

        <!-- Application Modal Start -->
        <div class="modal fade" id="applicationModal" tabindex="-1" role="dialog"
            aria-labelledby="applicationModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="applicationModalLabel">Apply for Scholarship.</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p class="app-intro">Complete the form below to apply for this scholarship opportunity.</p>
                        <form class="form-contact contact_form" action="/scholarship-application" method="post"
                            id="applicationForm" novalidate="novalidate" enctype="multipart/form-data">

                            <!-- Hidden Scholarship ID -->
                            <input type="hidden" name="scholarshipId" id="scholarshipId"
                                value="<%= scholarship ? scholarship.id : '' %>">

                            <div class="row app-form-grid">

                                <!-- First Name -->
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <input class="form-control" name="firstName" id="firstName" type="text"
                                            placeholder="First Name" required>
                                    </div>
                                </div>

                                <!-- Last Name -->
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <input class="form-control" name="lastName" id="lastName" type="text"
                                            placeholder="Last Name" required>
                                    </div>
                                </div>

                                <!-- Email -->
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <input class="form-control" name="email" id="email" type="email"
                                            placeholder="Email" required>
                                    </div>
                                </div>

                                <!-- Phone Number -->
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <input class="form-control" name="phone" id="phone" type="text"
                                            placeholder="Phone Number" required>
                                    </div>
                                </div>

                                <!-- Physical Address -->
                                <div class="col-12">
                                    <div class="form-group">
                                        <input class="form-control" name="address" id="address" type="text"
                                            placeholder="Your Physical Address" required>
                                    </div>
                                </div>

                                <!-- Passport Upload -->
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="passport" class="form-label">Upload Passport (PDF only)</label>
                                        <input class="form-control" name="passport" id="passport" type="file"
                                            accept=".pdf" required>
                                        <small class="text-muted">Upload a clear PDF copy (Max 5MB)</small>
                                    </div>
                                </div>

                            </div>

                            <div class="form-group mt-3 app-actions">
                                <button type="submit" class="btn head-btn2">Submit
                                    Application</button>
                                <button type="button" class="btn btn-secondary ml-2"
                                    data-dismiss="modal">Cancel</button>
                            </div>

                        </form>


                        <!-- Inline status kept minimal; main feedback is toast -->
                        <div class="mt-2">
                            <div id="formStatus" class="small text-muted" style="display:none;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Application Modal End -->

        <!-- JavaScript for Modal and Form Handling -->
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const form = document.getElementById('applicationForm');
                const formStatus = document.getElementById('formStatus');
                const toastContainer = document.getElementById('toastContainer');
                const modalEl = document.getElementById('applicationModal');

                function showToast(type, message, durationMs) {
                    const duration = durationMs || 3500;
                    const toast = document.createElement('div');
                    const bgColor = type === 'success' ? '#28a745' : '#dc3545';

                    toast.style.background = bgColor;
                    toast.style.color = '#fff';
                    toast.style.padding = '12px 16px';
                    toast.style.borderRadius = '8px';
                    toast.style.marginBottom = '10px';
                    toast.style.minWidth = '300px';
                    toast.style.maxWidth = '420px';
                    toast.style.boxShadow = '0 8px 24px rgba(0,0,0,0.15)';
                    toast.style.opacity = '0';
                    toast.style.transform = 'translateY(-10px)';
                    toast.style.transition = 'opacity 0.25s ease, transform 0.25s ease';
                    toast.innerHTML = '<strong>' + (type === 'success' ? 'Success!' : 'Error!') + '</strong> ' + message;

                    toastContainer.appendChild(toast);
                    requestAnimationFrame(function () {
                        toast.style.opacity = '1';
                        toast.style.transform = 'translateY(0)';
                    });

                    setTimeout(function () {
                        toast.style.opacity = '0';
                        toast.style.transform = 'translateY(-10px)';
                        setTimeout(function () {
                            if (toast.parentNode) {
                                toast.parentNode.removeChild(toast);
                            }
                        }, 250);
                    }, duration);
                }

                // Show toast from URL params (non-AJAX fallback)
                const urlParams = new URLSearchParams(window.location.search);
                if (urlParams.get('success') === 'true') {
                    showToast('success', urlParams.get('message') || 'Application submitted successfully.', 3500);
                } else if (urlParams.get('error') === 'true') {
                    showToast('error', urlParams.get('message') || 'There was a problem submitting your application.', 3500);
                }

                if (!form) return;

                form.addEventListener('submit', async function (e) {
                    e.preventDefault();

                    const requiredFields = ['firstName', 'lastName', 'email', 'phone', 'address', 'passport'];
                    let isValid = true;

                    requiredFields.forEach(function (field) {
                        const input = document.getElementById(field);
                        if (!input) return;

                        const hasValue = field === 'passport' ? !!input.value : !!input.value.trim();
                        if (!hasValue) {
                            input.style.borderColor = 'red';
                            isValid = false;
                        } else {
                            input.style.borderColor = '';
                        }
                    });

                    if (!isValid) {
                        showToast('error', 'Please fill in all required fields.', 3500);
                        return;
                    }

                    const submitBtn = form.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.disabled = true;
                        submitBtn.textContent = 'Submitting...';
                    }
                    if (formStatus) {
                        formStatus.style.display = 'block';
                        formStatus.textContent = 'Submitting your application...';
                    }

                    try {
                        const response = await fetch('/scholarship-application', {
                            method: 'POST',
                            body: new FormData(form),
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });

                        const data = await response.json().catch(function () { return {}; });
                        if (response.ok && data.success) {
                            const successText = data.message || 'Your scholarship application has been submitted successfully.';
                            form.reset();

                            if (window.jQuery && window.jQuery.fn && window.jQuery.fn.modal) {
                                window.jQuery('#applicationModal').modal('hide');
                            } else if (modalEl) {
                                modalEl.classList.remove('show');
                                modalEl.style.display = 'none';
                                document.body.classList.remove('modal-open');
                            }

                            if (formStatus) {
                                formStatus.style.display = 'none';
                            }
                            showToast('success', successText, 3500);
                            return;
                        }

                        const errorText = data.message || 'Error submitting application.';
                        if (formStatus) {
                            formStatus.style.display = 'none';
                        }
                        showToast('error', errorText, 3500);
                    } catch (err) {
                        if (formStatus) {
                            formStatus.style.display = 'none';
                        }
                        showToast('error', 'Network error. Please try again.', 3500);
                    } finally {
                        if (submitBtn) {
                            submitBtn.disabled = false;
                            submitBtn.textContent = 'Submit Application';
                        }
                    }
                });
            });
        </script>

    </main>
</body>
